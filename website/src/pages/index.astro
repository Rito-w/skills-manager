---
import BaseLayout from '@layouts/BaseLayout.astro'
import { Download, Github, Store, Link2, FolderTree, Monitor } from 'lucide-react'

const title = 'Skills Manager - Multi-IDE Skills 管理器'
const description = '从 Market 下载、管理本地 Skills，并一键安装到多个 IDE。'

const features = [
  {
    icon: Store,
    title: 'Market 搜索与下载',
    desc: '基于公开 registry 检索技能，支持快速下载与更新。',
  },
  {
    icon: FolderTree,
    title: '本地仓库管理',
    desc: '集中管理本地 Skills，清晰展示关联 IDE 状态。',
  },
  {
    icon: Link2,
    title: '一键安装到 IDE',
    desc: '软链接优先，支持多 IDE 目录与自定义路径。',
  },
]

const repoUrl = 'https://github.com/Rito-w/skills-manager'
const releaseUrl = 'https://github.com/Rito-w/skills-manager/releases/latest'
---

<BaseLayout title={title} description={description} lang="zh">
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20 pb-24">
    <div class="absolute top-4 right-4 md:top-8 md:right-8 z-50 flex items-center gap-2">
      <a
        href={repoUrl}
        class="inline-flex items-center justify-center rounded-full border border-border bg-background/60 p-2 text-foreground transition-all hover:bg-muted hover:border-primary/50"
        aria-label="GitHub"
      >
        <Github className="w-5 h-5" />
      </a>
    </div>

    <div class="absolute inset-0 bg-linear-to-b from-primary/10 via-transparent to-transparent blur-3xl opacity-40 pointer-events-none"></div>

    <div class="relative z-10 text-center px-6 max-w-5xl mx-auto flex flex-col items-center">
      <div class="inline-flex items-center gap-2 rounded-md border border-border bg-muted/50 px-3 py-1 font-mono text-xs text-muted-foreground mb-8 backdrop-blur-md">
        <span class="relative inline-flex rounded-full h-2 w-2 bg-primary"></span>
        <span>Multi-IDE Skills Manager</span>
      </div>

      <h1 class="text-5xl md:text-7xl font-bold mb-6 text-foreground tracking-tight">Skills Manager</h1>

      <p class="text-lg md:text-2xl text-muted-foreground mb-10 max-w-3xl leading-relaxed">
        从 Market 下载、管理本地 Skills，并一键安装到多个 IDE。
        <br />
        <span class="text-foreground/80 font-medium">简洁流程、清晰状态、可靠链接。</span>
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center w-full sm:w-auto">
        <a
          href={releaseUrl}
          class="group relative inline-flex items-center justify-center gap-3 overflow-hidden rounded-md bg-primary px-8 py-4 font-mono text-sm font-bold text-primary-foreground shadow-lg transition-all hover:bg-primary/90 hover:shadow-primary/25 hover:scale-[1.02]"
        >
          <Download className="w-5 h-5" />
          <span>Download</span>
          <div
            class="absolute inset-0 -z-10 bg-linear-to-r from-transparent via-white/20 to-transparent translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-700"
          ></div>
        </a>
        <a
          href={repoUrl}
          class="inline-flex items-center justify-center gap-3 rounded-md border border-border bg-background/50 px-8 py-4 font-mono text-sm font-medium text-foreground backdrop-blur-sm transition-all hover:bg-muted hover:border-primary/50"
        >
          <Github className="w-5 h-5" />
          <span>GitHub</span>
        </a>
      </div>

      <div class="mt-8 flex gap-4 text-xs font-mono text-muted-foreground opacity-70">
        <span class="flex items-center gap-1.5"><Monitor className="w-3 h-3" /> macOS</span>
        <span class="flex items-center gap-1.5"><Monitor className="w-3 h-3" /> Windows</span>
      </div>
    </div>
  </section>

  <section class="py-20 px-6 relative border-t border-border">
    <div class="absolute inset-0 bg-muted/20 bg-[radial-gradient(#80808012_1px,transparent_1px)] bg-[size:20px_20px]"></div>

    <div class="max-w-6xl mx-auto relative z-10">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4 tracking-tight">核心功能</h2>
        <p class="font-mono text-xs text-primary/80 uppercase tracking-widest">// Core Modules</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {features.map((feature) => (
          <div class="group relative overflow-hidden rounded-lg border border-border bg-card/30 backdrop-blur-sm p-6 hover:border-primary/50 transition-all duration-300 hover:shadow-lg hover:shadow-primary/5">
            <div class="mb-5 inline-flex items-center justify-center rounded bg-primary/10 p-2.5 text-primary ring-1 ring-inset ring-primary/20 group-hover:scale-110 transition-transform duration-300">
              <feature.icon className="w-6 h-6" />
            </div>
            <h3 class="font-mono text-lg font-bold text-foreground mb-2 group-hover:text-primary transition-colors">
              {feature.title}
            </h3>
            <p class="text-sm text-muted-foreground leading-relaxed">{feature.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-20 px-6">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4 tracking-tight">界面预览</h2>
        <p class="font-mono text-xs text-primary/80 uppercase tracking-widest">// UI Preview</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="rounded-2xl border border-border bg-card/40 p-4 shadow-sm">
          <img src="/screenshots/market.png" alt="Market 搜索" class="rounded-xl w-full" />
          <div class="mt-3 text-sm text-muted-foreground">Market 搜索</div>
        </div>
        <div class="rounded-2xl border border-border bg-card/40 p-4 shadow-sm">
          <img src="/screenshots/local.png" alt="本地 Skills" class="rounded-xl w-full" />
          <div class="mt-3 text-sm text-muted-foreground">本地 Skills</div>
        </div>
        <div class="rounded-2xl border border-border bg-card/40 p-4 shadow-sm">
          <img src="/screenshots/ide.png" alt="IDE 浏览" class="rounded-xl w-full" />
          <div class="mt-3 text-sm text-muted-foreground">IDE 浏览</div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
