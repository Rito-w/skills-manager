{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "skills-manager-gui",
  "version": "0.3.1",
  "identifier": "com.wrt.skills-manager-gui",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "skills-manager-gui",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https:; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:"
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/Rito-w/skills-manager/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEE4M0VBQ0RBMjMyNjIyMTMKUldRVElpWWoycXcrcUR6QzlicDU2dDBVN2hqamJ6SDE2TDhmWHp5Yk45bmNyNnZKT1JSSHVxNDMK"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
